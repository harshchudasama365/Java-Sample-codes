<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context-3.0.xsd">
 
 <bean id="myds" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
	 <constructor-arg name="url" value="jdbc:oracle:thin:@localhost:1521:XE"></constructor-arg>
	 <constructor-arg name="username" value="harsh"></constructor-arg>
	 <constructor-arg name="password" value="root"></constructor-arg>
 </bean>
 
 <bean id="jdbc_temp_ref" class="org.springframework.jdbc.core.JdbcTemplate">
 	<constructor-arg name="dataSource" ref="myds"></constructor-arg>
 </bean>
 
 <bean id="persondao" class="com.lti.dao.PersonDAOImpl">
 	<property name="jdbc_temp" ref="jdbc_temp_ref"></property>
 </bean>
</beans>